{
  "name": "stoner-tools",
  "version": "1.0.4",
  "description": "A handy desktop utility for enthusiasts, featuring a global 420 countdown, Discord Rich Presence, a rip counter, and OBS integration.",
  "author": "xanzinfl",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/xanzinfl/Stoner-Tools.git"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "moment-timezone": "^0.5.43",
    "node-notifier": "^10.0.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@bitdisaster/exe-icon-extractor": "^1.0.10",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-wix": "^7.8.3",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/publisher-github": "^7.8.3",
    "electron": "^25.3.1",
    "electron-wix-msi": "^5.1.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icon",
        "asar": true
      },
      "rebuildConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "language": 1033,
            "manufacturer": "xanzinfl",
            "description": "The ultimate stoner toolkit!",
            "name": "Stoner Tools",
            "shortName": "Stoner Tools",
            "shortcutFolderName": "Stoner Tools",
            "programFilesFolderName": "Stoner Tools",
            "appIcon": "assets/icon.ico",
            "ui": {
              "chooseDirectory": true
            }
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "xanzinfl",
              "name": "Stoner-Tools"
            },
            "prerelease": false,
            "draft": false
          }
        }
      ]
    }
  }
}
